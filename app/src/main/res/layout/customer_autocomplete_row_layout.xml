<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

        <TextView
            android:id="@+id/carl1_customerName"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:text="Abhinandan Mitra aaaaaa"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/carl1_customerVisits"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="1200"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:paddingRight="6dp"
            android:layout_toRightOf="@id/carl1_customerName"
            android:textColor="#444444"/>

        <TextView
            android:id="@+id/carl1_customerContact"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="9163826615"
            android:textSize="14sp"
            android:textAlignment="textStart"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/carl1_customerName"
            android:textColor="#444444"/>

</RelativeLayout>