<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feedBack0_Activity"
    android:background="@drawable/background1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imv11_backButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:clickable="true"
            android:tint="#333333"
            android:focusable="true"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1  /  7"
            android:layout_gravity="center"
            android:layout_marginLeft="122dp"
            android:textColor="#333333"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="555dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/identification4"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Please Enter your contact number for us to recognize you"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="22dp"
            android:textColor="#222222"
            android:fontFamily="@font/clan_book_webfont"
            android:lineSpacingExtra="6dp"
            />

        <!-- Contact Number Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#555555"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:hint="Contact Number *"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp">

            <AutoCompleteTextView
                android:id="@+id/actv11_mobileNumberInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:fontFamily="@font/product_sans_regular"
                android:paddingStart="15dp"
                android:drawableLeft="@drawable/contact_icon"
                android:drawablePadding="15dp"
                android:inputType="phone"
                android:maxLines="1"
                android:completionThreshold="3"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/bt11_doneButton"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="92dp"
            android:elevation="10dp"
            android:text="Done"
            android:textAllCaps="false"
            android:background="@color/buttonBlue"
            android:textColor="#ffffff"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="20sp"/>



    </LinearLayout>

</LinearLayout>