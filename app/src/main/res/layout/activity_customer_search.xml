<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerSearchActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar9"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#000000"
        android:elevation="6dp"
        android:gravity="center|start"
        android:paddingTop="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv9_backButton"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clan_book_webfont"
                android:paddingLeft="15dp"
                android:text="All Customers"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv9_allCustomers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BBBBBB"/>

    <TextView
        android:id="@+id/tv9_nothingToDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-- Nothing To Display --"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/product_sans_regular"
        android:textColor="#333333"
        android:visibility="gone"
        android:layout_marginTop="30dp"/>


</LinearLayout>