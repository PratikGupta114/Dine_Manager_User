<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="370dp"
    android:layout_height="450dp"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#000000">

        <ImageView
            android:id="@+id/dbfmi_closeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="#ffffff"
            android:padding="14dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_marginLeft="300dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Recipent Name"
        android:fontFamily="@font/roboto_light"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/dbfmi_customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abhinandan mitra aaaaaa"
        android:fontFamily="@font/product_sans_regular"
        android:textColor="#333333"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Message"
        android:fontFamily="@font/roboto_light"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dbfmi_messageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dbfmi_messageInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:hint="Enter message here"
            android:maxLength="153"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="14sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/dbfmi_sendButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:background="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Send"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textAlignment= "viewEnd"
        android:fontFamily="@font/clan_book_webfont"
        android:drawableRight="@drawable/ic_send_black_24dp"
        android:drawableTint="#ffffff"
        android:textSize="16sp"
        android:paddingRight="30dp"
        android:drawablePadding="20dp"
        />

</LinearLayout>