<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="270dp"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/dwi1_imv_closeButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="#ffffff"
            android:layout_marginLeft="300dp"
            android:padding="5dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/dwi1_tv_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new Name"
        android:layout_marginLeft="25dp"
        android:textColor="#444444"
        android:fontFamily="@font/roboto_light"
        android:layout_marginTop="25dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dwi1_textInputLayout"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dwi1_et_newData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Name"
            android:textSize="14sp"
            android:fontFamily="@font/product_sans_regular"
            android:textColor="#555555"
            android:drawableLeft="@drawable/name_icon"
            android:drawablePadding="20dp"
            android:paddingStart="15dp"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/dwi1_bt_saveButton"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Save"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/clan_book_webfont"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:textSize="15sp"/>


</LinearLayout>